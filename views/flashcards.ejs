<%- include('header.ejs') %>
<div class="flashCard">
    <div class="container text-center mt-5">
        <h2><%= currentSubject %></h2>
        <div id="card" class="flashcard">
            <div class="card-content">
                <div class="question">
                    <p>Click to see the answer</p>
                </div>
                <div class="answer">
                    <p>The answer will appear here!</p>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button id="prev" class="btn btn-secondary">Previous</button>
            <button id="next" class="btn btn-primary">Next</button>
        </div>
    </div>
</div>
<script src="js/flashcards.js"></script>
<%- include('footer.ejs') %>

<style>
    .flashCard {
        padding: 30px;
        background: #f9f9f9;
        min-height: 100vh;
    }
    /*.container {*/
    /*    max-width: 800px;*/
    /*}*/
    #card {
        width: 100%;
        max-width: 400px;
        height: 250px;
        margin: 0 auto;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        background: #fff;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        perspective: 1000px; /* Enables 3D space for flipping effect */
        transition: transform 0.6s ease-in-out;
    }

    .card-content {
        width: 100%;
        height: 100%;
        position: absolute;
        backface-visibility: hidden;
    }

    .question, .answer {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        font-size: 1.5rem;
        padding: 10px;
        color: #333;
    }

    .question {
        background-color: #f0f0f0;
        border-radius: 15px;
    }

    .answer {
        background-color: #007bff;

        color: white;
        display: none;
        border-radius: 15px;
    }

    #card.flipped .question {
        display: none;
    }

    #card.flipped .answer {
        display: flex;
    }

    button {
        padding: 10px 20px;
        font-size: 1rem;
        margin: 5px;
        border-radius: 5px;
        transition: transform 0.2s ease-in-out;
    }

    button:hover {
        transform: scale(1.1);
    }

    #prev:hover, #next:hover {
        background-color: #007bff;
    }

    #prev:disabled, #next:disabled {
        opacity: 0.5;
    }
</style>
