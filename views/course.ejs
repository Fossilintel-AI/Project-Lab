<%- include('header.ejs') %>
<div class="container">
    <h2 class="text-center my-4">Lecture Slides for <%= subject %></h2>

    <% if (slides.length === 0) { %>
        <p class="text-center text-muted">No slides available for this course.</p>
    <% } else { %>
        <ul class="list-group">
            <% slides.forEach((slide, index) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Lecture <%= index + 1 %>: <%= slide.replace('.pdf', '') %>
                    <a href="/Course/<%= subject %>/slides/<%= encodeURIComponent(slide) %>" target="_blank" class="btn btn-sm btn-brown ">View</a>
                </li>
            <% }); %>
        </ul>
    <% } %>
</div>


