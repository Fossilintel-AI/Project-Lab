<%- include('header.ejs') %>
<!-- Upgrade Start -->
<div class="container-xxl py-5">
    <div class="container">
        <!-- Upgrade Form -->
        <div id="upgradeContainer" class="card shadow-lg p-4 rounded-lg signupStyle-form">
            <form action="/upgrade" method="POST" id="upgradeForm" onsubmit="return validateUpgradeForm()">
                <h2 class="text-center mb-4 signupStyle-title">Upgrade Your Plan</h2>

                <!-- Subscription Plan Selection -->
                <div class="form-group mb-3">
                    <label for="subscription_type" class="signupStyle-label">Choose a Plan</label>
                    <select class="form-control signupStyle-input" id="subscription_type" name="subscription_type" required onchange="toggleUpgradeFields()">
                        <option value="Free">Free</option>
                        <option value="Pro">Pro</option>
                        <option value="Enterprise">Enterprise</option>
                    </select>
                </div>

                <!-- Payment Fields (Hidden by Default) -->
                <div id="paymentFields" style="display: none;">
                    <div class="form-group mb-3">
                        <label for="card_number" class="signupStyle-label">Card Number</label>
                        <input type="text" class="form-control signupStyle-input" id="card_number" name="card_number" placeholder="1234 5678 9012 3456">
                    </div>
                    <div class="form-group mb-3">
                        <label for="cvv" class="signupStyle-label">CVV</label>
                        <input type="text" class="form-control signupStyle-input" id="cvv" name="cvv" placeholder="123">
                    </div>
                    <div class="form-group mb-3">
                        <label for="expiry_date" class="signupStyle-label">Expiry Date</label>
                        <input type="month" class="form-control signupStyle-input" id="expiry_date" name="expiry_date">
                    </div>
                </div>

                <button type="submit" class="btn btn-brown w-100 py-2 mt-3 signupStyle-button" id="submitBtn">Upgrade Plan</button>
            </form>
        </div>
        <!-- Success Message (Hidden Initially) -->
        <div id="successMessage" class="text-center mt-4" style="display: none;">
            <div class="success-icon mb-3">âœ…</div>
            <h3 class="text-success">Upgrade Successful!</h3>
            <p>Your plan has been upgraded successfully. You're now on the <strong><span id="planName"></span></strong> plan!</p>
<!--            <a href="/profile" class="btn btn-brown py-2">Go to Profile</a>-->
        </div>
        <!-- Loading Animation (Hidden Initially) -->
        <div id="loading" class="text-center mt-4" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Processing...</span>
            </div>
            <p>Processing Payment...</p>
        </div>
    </div>
</div>

<!-- Error handling -->
<% if (locals.error) { %>
    <div class="alert alert-danger mt-3">
        <%= error %>
    </div>
<% } %>

<style>
    .signupStyle {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f9;
    }
    .signupStyle-title {
        color: #8B4513;
    }
    .signupStyle-form {
        background-color: #fff;
        max-width: 500px;
        margin: 0 auto;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .signupStyle-label {
        color: #8B4513;
    }
    .signupStyle-input {
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 10px;
        transition: border 0.3s ease;
    }
    .signupStyle-input:focus {
        border-color: #8B4513;
        box-shadow: 0 0 5px rgba(139, 69, 19, 0.6);
    }
    .signupStyle-button {
        background-color: #8B4513;
        color: #fff;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }
    .signupStyle-button:hover {
        background-color: #7A3F10;
    }
    .card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .alert {
        font-weight: bold;
        background-color: #f8d7da;
        color: #721c24;
        border-radius: 10px;
    }
    .success-icon {
        font-size: 50px;
    }
    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.25em;
    }
</style>

<script>
    function toggleUpgradeFields() {
        let plan = document.getElementById("subscription_type").value;
        let paymentFields = document.getElementById("paymentFields");
        if (plan === "Pro" || plan === "Enterprise") {
            paymentFields.style.display = "block";
        } else {
            paymentFields.style.display = "none";
        }
    }

    function validateUpgradeForm() {
        let plan = document.getElementById("subscription_type").value;
        if (plan === "Free") {
            showSuccessMessage(plan); // Automatically show success for Free plan
            return false; // Prevent form submission if it's free
        }

        let cardNumber = document.getElementById("card_number").value.trim();
        let cvv = document.getElementById("cvv").value.trim();
        let expiryDate = document.getElementById("expiry_date").value.trim();
        let cardNumberRegex = /^\d{16}$/;
        let cvvRegex = /^\d{3}$/;
        if (!cardNumberRegex.test(cardNumber)) {
            alert("Invalid Card Number. Must be 16 digits.");
            return false;
        }
        if (!cvvRegex.test(cvv)) {
            alert("Invalid CVV. Must be 3 digits.");
            return false;
        }
        if (!expiryDate) {
            alert("Please enter the expiry date.");
            return false;
        }

        // Show loading animation
        document.getElementById("upgradeContainer").style.display = "none";
        document.getElementById("loading").style.display = "block";

        // Simulate form submission delay
        setTimeout(() => {
            document.getElementById("loading").style.display = "none";
            showSuccessMessage(plan);

            // Submit the form after success message simulation
            document.getElementById("upgradeForm").submit(); // This will actually submit the form to the server
        }, 2000); // Simulate 2 seconds of processing

        return false; // Prevent immediate form submission
    }


    function showSuccessMessage(plan) {
        document.getElementById("upgradeContainer").style.display = "none";
        document.getElementById("successMessage").style.display = "block";
        document.getElementById("planName").textContent = plan;
    }
</script>

<%- include('footer.ejs') %>
