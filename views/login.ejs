<%- include('header.ejs') %>

<!-- Login Start -->
<div class="container-xxl py-5">
    <div class="container">
        <h2 class="text-center mb-4 loginStyle-title">Login</h2>

        <!-- Login Form -->
        <div id="loginFormContainer" class="card shadow-lg p-4 rounded-lg loginStyle-form">
            <form action="/login" method="POST" id="loginForm" onsubmit="handleLogin()">
                <!-- Email Address -->
                <div class="mb-3">
                    <label for="email" class="form-label loginStyle-label">Email Address</label>
                    <input type="email" class="form-control loginStyle-input" id="email" name="email" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label loginStyle-label">Password</label>
                    <input type="password" class="form-control loginStyle-input" id="password" name="password" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-brown w-100 py-3 mt-3 loginStyle-button" id="loginButton">Login</button>
            </form>
        </div>

        <!-- Loading Animation (Hidden by Default) -->
        <div id="loading" class="text-center mt-4" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Logging in...</span>
            </div>
            <p>Logging in...</p>
        </div>
    </div>
</div>

<!-- Error Handling -->
<% if (locals.error) { %>
    <div class="errorhandler animated fadeIn">
        <div class="error-icon"><i class="fas fa-exclamation-triangle"></i></div>
        <div class="error-text">
            <strong>Error:</strong> <%= error %>
        </div>
        <button class="close-btn">&times;</button>
    </div>
<% } %>

<!-- Login End -->

<%- include('footer.ejs') %>

<style>
    .loginStyle {
        /* General Styles */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f9;
    }

    .loginStyle-title {
        color: #8B4513;
    }

    .loginStyle-form {
        background-color: #fff;
        max-width: 500px;
        margin: 0 auto;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .loginStyle-label {
        color: #8B4513;
    }

    .loginStyle-input {
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 10px;
        transition: border 0.3s ease;
    }

    .loginStyle-input:focus {
        border-color: #8B4513;
        box-shadow: 0 0 5px rgba(139, 69, 19, 0.6);
    }

    .loginStyle-button {
        background-color: #8B4513;
        color: #fff;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .loginStyle-button:hover {
        background-color: #7A3F10;
    }

    .errorhandler {
        background-color: #f8d7da;
        color: #721c24;
        border-radius: 10px;
        padding: 10px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.25em;
    }
</style>

<script>
    function handleLogin() {
        // Show the loading animation
        document.getElementById("loginFormContainer").style.display = "none"; // Hide the form
        document.getElementById("loading").style.display = "block"; // Show loading spinner

        // Simulate login process (replace this with actual logic)
        setTimeout(function() {
            // Allow form submission after the loading animation
            document.getElementById("loading").style.display = "none";
            document.getElementById("loginFormContainer").style.display = "block"; // Optional: Proceed with form
        }, 2000); // Simulate 2 seconds delay for login
    }
</script>
